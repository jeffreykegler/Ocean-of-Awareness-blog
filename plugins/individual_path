package individual_path;

use 5.010;
use strict;
use warnings;

sub start {
    return 1;
}

sub story {
      my (undef, $path, $fn) = @_;
      my $individual_path = $path . '/' . $fn . '.html';
      $individual_path =~ s{ \A [/]* }{}xms;
      *blosxom::individual_path = \$individual_path;
      say 'individual_path: ', $blosxom::individual_path ;
    1;
} ## end sub foot

1;
